#include <stdio.h>
#include <stdlib.h>

int main (){
    int ano, idade;
    printf("Que ano você nasceu? ");
    scanf("%d", &ano);
   
    idade = 2020 - ano;
   
    printf("Você tem %i", idade);
   
    return 0;
}

