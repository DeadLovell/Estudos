#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(){
float capital, juros, montante;
int meses;
printf("Qual o capital investido? ");
scanf("%f", &capital);

printf("Qual os juros aplicados?  (0.01 / 0.02 / 0.03...) ");
scanf("%f", &juros);

printf("Por quantos meses foi aplicado? ");
scanf("%d", &meses);



montante = capital * pow (1+juros, meses);



printf("O resultado final e %.2f", montante);

return 0;


}
