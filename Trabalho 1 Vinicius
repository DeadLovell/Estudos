#include <stdio.h>
#include <stdlib.h>

int main(){
	int a, b, c, d;
	printf("Informe um numero inteiro aleatório: ");
	scanf("%d", &a);
	printf("Informe outro numero inteiro aleatorio: ");
	scanf("%d", &b);
	
	a + b == c;
	a - b == d;
	
	c = a;
	d = b;

	printf("Estes sao os novos valores de %d e %d", a,b);
	return 0;
}
