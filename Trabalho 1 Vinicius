#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main (){
	int a, b, c;
	printf("Qual o salario inicial do funcionario? ");
	scanf("%2f", &a);

	b = a * 1.25;

	printf("O salario final do funcionario e %2f", b);

	return 0;
}
------------------------------------------------------------------------------------------------------------------------------------


#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main (){
	int a, b, c;
	printf("Qual o salario base do funcionario? ");
	scanf("%d", &a);

	b = a * 1.05;
	
	c = b * 0.93;

	printf("O salario bruto e %d!, c");

	return 0;
}
