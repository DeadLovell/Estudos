#include<stdio.h>
#include<stdlib.h>


int main(){

    int peso, engpeso, empeso;

    printf("Qual o seu peso atual? ");

    scanf("%i", &peso);

   
    engpeso = peso * 1.15;
    empeso = peso * 0.80;
   
    printf("Caso você engorde 15 porcento seu peso será: %i ", &engpeso);

    printf("Caso você emagreca 20 porcento seu novo peso será: %i ", &empeso);

   
    return 0;
   
 
 
}  
