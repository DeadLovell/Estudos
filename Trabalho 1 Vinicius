#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(){
	int x, y, z, k, f;
	printf("Digite um numero para media aritmetica: ");
	scanf("%d", &x);
	printf("Digite outro numero para a media: ");
	scanf("%d", &y);
	printf("Outro numero: ");
	scanf("%d", &z);

	k = x + y + z;
    f = k/3;
	printf("A media aritmetica é %d!", f);

	return 0;
}
