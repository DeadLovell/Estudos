#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(){
	int π, R, c, k;
	printf("Qual o raio do circulo? ");
	scanf("%f", &R);

	π = 3,14;
	pow(R,R) = k;

	c = π * k;

	printf("O resultado final é %f!", c);

	return 0;
}
