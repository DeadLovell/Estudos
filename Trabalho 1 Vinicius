#include <stdio.h>
#include <stdlib.h>
int main(){
	int a, b, c;
	printf("Digite um numero inteiro para soma: ");
	scanf("%d", &a);
	printf("Digite outro numero inteiro: ");
	scanf("%d", &b);
	c = a + b;
	printf("%d", c);

	return 0;
}
