#include <stdio.h>
#include <stdlib.h>

int main (){
	int z, x, c;
	printf("Digite um numero inteiro: ");
	scanf("%d", &z);
	printf("Digite outro numero inteiro: ");
	scanf("%d", &x);

	c = z * x;

	printf("%d", c);

	return 0;

}
