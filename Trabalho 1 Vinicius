#include <stdio.h>
#include <stdlib.h>

int main(){
float grausc, grausf;
printf("Quantos graus Celsius voce quer converter? ");
scanf("%f", &grausc);

grausf = (1.8 * grausc) + 32;

printf("A temperatura em graus Farenheit e %.2f", grausf);

return 0;
}





