#include <stdio.h>
#include <stdlib.h>

int main(){
	int a, b, c, d;
	printf("Escolha um numero para soma: ");
	scanf("%d", &a);
	printf("Escolha outro numero para soma: ");
	scanf("%d", %b);
	printf("Escolha mais um numero para soma: ");
	scanf("%d", &c);

	d = a + b + c;

	printf("O resultado é %d!", d);

	return 0;
}
