#include <stdio.h>
#include <stdlib.h>

int main (){
	int x, y, soma;
	printf("Digite um numero: ");
	scanf("%i", &x);
	printf("Digite outro numero: ");
	scanf("%i", &y);

	soma = x + y;

	if(x>y){
	printf("A soma dos números é %d, e o maior deles é %i", soma, x);
	}else{
	printf("A soma dos números é %d, e o maior deles é %i", soma, y);

	}
	return 0;
}
